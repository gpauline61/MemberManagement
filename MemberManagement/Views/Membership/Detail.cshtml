@using MemberManagement.Web.ViewModels.MembershipVM
@model MembershipDetailViewModel

@{
    ViewData["Title"] = "Membership Details";
}

<div class="row justify-content-between">
    <div class="col-md-8">
        <h1>
            <a asp-action="Index" style="text-decoration: none;">
                <i class="bi bi-arrow-left-circle fs-3" style="color: black" title="Back"></i>
            </a>
            Membership Information
        </h1>
    </div>
    <div class="col-md-2 ml-auto">
        <a asp-action="Edit" class="btn btn-primary btn-block" asp-route-id="@Model?.MembershipID">
            <i class="bi bi-pencil-square" title="Edit"></i>
            Edit Membership
        </a>
    </div>
</div>


<hr />
<div class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row justify-content-center">
        <div class="col col-lg-10">
            <table class="table table-striped table-bordered table-hover responsive">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayNameFor(Model => Model.MembershipType)</td>
                        <td>@Html.DisplayFor(Model => Model.MembershipType)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(Model => Model.MembershipDescription)</td>
                        <td>@Html.DisplayFor(Model => Model.MembershipDescription)</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>

