@using MemberManagement.Domain.Enum
@using MemberManagement.Web.ViewModels.MembershipVM
@model MembershipEditViewModel
@{
    ViewData["Title"] = "Edit Membership";
}


<h1>
    <a asp-action="Index" style="text-decoration: none;">
        <i class="bi bi-arrow-left-circle fs-3" style="color: black" title="Back"></i>
    </a>
    Edit Membership Information
</h1>
<div class="container">
    <form asp-action="Edit">
        <div class="row justify-content-center">
            <div class="col col-lg-10">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MembershipID" />
                <table class="table table-striped table-bordered table-hover responsive">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>@Html.DisplayNameFor(Model => Model.MembershipType)</td>
                            <td>
                                <input asp-for="MembershipType" class="form-control" />
                                <span asp-validation-for="MembershipType" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(Model => Model.MembershipDescription)</td>
                            <td>
                                <input asp-for="MembershipDescription" class="form-control" />
                                <span asp-validation-for="MembershipDescription" class="text-danger"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row justify-content-lg-center">
            <div class="col-2">
                @if (Model == null)
                {
                    <input disabled type="submit" value="Save" class="btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="Save" class="btn btn-primary" />
                }

            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
