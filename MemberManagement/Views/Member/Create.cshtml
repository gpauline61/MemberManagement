@using MemberManagement.Domain.Enum
@using MemberManagement.Web.ViewModels.MemberVM
@model MemberCreateViewModel
@{
    ViewData["Title"] = "Add Member";
}

<h1>
    <a asp-action="Index" style="text-decoration: none;">
        <i class="bi bi-arrow-left-circle fs-3" style="color: black" title="Back"></i>
    </a>
    Add Member
</h1>
<hr />
<div class="container">
    <form asp-action="Create">
        <div class="row justify-content-center">
            <div class="col col-lg-10">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <table class="table table-striped table-bordered table-hover responsive">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>@Html.DisplayNameFor(Model => Model.LastName)</td>
                            <td>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(Model => Model.FirstName)</td>
                            <td>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(Model => Model.Birthdate)</td>
                            <td>
                                <input asp-for="Birthdate" class="form-control" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="Birthdate" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(Model => Model.Address)</td>
                            <td>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(Model => Model.Branch)</td>
                            <td>
                                <select asp-for="BranchId" asp-items="@(ViewBag.BranchesList as SelectList)" class="form-control">
                                    <option>--Select--</option>
                                </select>
                                <span asp-validation-for="Branch" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(Model => Model.Membership)</td>
                            <td>
                                <select asp-for="MembershipId" asp-items="@(ViewBag.MembershipsList as SelectList)" class="form-control">
                                    <option>--Select--</option>
                                </select>
                                <span asp-validation-for="Membership" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(Model => Model.ContactNo)</td>
                            <td>
                                <input asp-for="ContactNo" class="form-control" placeholder="+63xxxxxxxxxx"/>
                                <span asp-validation-for="ContactNo" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(Model => Model.Email)</td>
                            <td>
                                <input asp-for="Email" class="form-control" placeholder="example@sample.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row justify-content-lg-center">
            <div class="col-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}