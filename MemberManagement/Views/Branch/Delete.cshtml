@using MemberManagement.Web.ViewModels.Branch
@model BranchDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>
    <a asp-action="Index" style="text-decoration: none;">
        <i class="bi bi-arrow-left-circle fs-3" style="color: black" title="Back"></i>
    </a>
    Delete Branch
</h1>

<h3>Are you sure you want to set this Member as inactive?</h3>
<div class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row justify-content-center">
        <div class="col col-lg-10">
            <table class="table table-striped table-bordered table-hover responsive">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayNameFor(Model => Model.BranchName)</td>
                        <td>@Html.DisplayFor(Model => Model.BranchName)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(Model => Model.BranchAddress)</td>
                        <td>@Html.DisplayFor(Model => Model.BranchAddress)</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
    <div class="row justify-content-lg-center">
        <div class="col-2">
            <form asp-action="Delete">
                <input type="hidden" asp-for="BranchID" />
                <input type="submit" value="Delete Branch" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>


</div>
