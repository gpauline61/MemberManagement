@using MemberManagement.Web.ViewModels.BranchVM
@model List<BranchIndexViewModel>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        Branch
        <a asp-action="Create" style="text-decoration: none;">
            <i class="bi bi-person-plus fs-1" style="color: #0055ff;" title="Add"></i>
        </a>
    </h1>
</div>
<hr />


<table id="membersTable" class="table table-striped table-bordered table-hover responsive">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].BranchName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].BranchAddress)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@counter</td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchAddress)
                </td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.BranchID" style="text-decoration: none;">
                        <i class="bi bi-eye-fill fs-4" style="color: #2807e8" title="View"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.BranchID" style="text-decoration: none;">
                        <i class="bi bi-pencil-square fs-4" style="color: #439be8;" title="Edit"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.BranchID" style="text-decoration: none;">
                        <i class="bi bi-person-x-fill fs-4" style="color: #c4001a;" title="Delete"></i>
                    </a>
        </tr>
            counter++;
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].BranchName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].BranchAddress)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </tfoot>
</table>
